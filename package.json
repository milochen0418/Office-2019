    "html-webpack-plugin": "^3.2.0",
    "truffle-hdwallet-provider": "^1.0.2",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.2.1",
    "http-server": "^0.11.1"
  },
  "dependencies": {
    "bootstrap": "^4.3.1",
    "css-loader": "^2.1.0",
    "jquery": "^3.3.1",
